<!DOCTYPE html>
<html ng-app="sm808">
  <head>
    <title><%= pkg.name %></title>

    <link rel="stylesheet" type="text/css" href="<%= css %>" media="all" />
    <script type="text/javascript" src="<%= js %>"></script>
  </head>
  <body ng-controller="MainController">
    <div class="container">
      <h1>SM-808</h1>

      <table class="table sm-808" cellspacing="0">
        <tr>
          <th>Name</th>
          <th>*</th>
          <th ng-repeat="i in drumMachine.masterPart.sequence.stepsRange" class="{{ cellClass(drumMachine.masterPart, i) }}">{{ i + 1 }}</th>
        </tr>
        <tr ng-repeat="part in drumMachine.parts">
          <td>{{ part.name }}</td>
          <td>{{ part.currentEvent.level }}</td>
          <td ng-repeat="event in part.sequence.events" class="event-cell {{ eventCellClass(part, event, $index) }}" ng-click="toggleLevel(event)"><span></span></td>
        </tr>
      </table>

      <button class="btn btn-primary" ng-click="drumMachine.advanceSequence()">Next</a>
      <button class="btn" ng-click="drumMachine.reset()">Reset</a>
    </div>
  </body>
</html>
